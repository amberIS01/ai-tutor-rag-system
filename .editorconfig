# EditorConfig for consistent coding styles

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,js,html,css}]
indent_style = space
indent_size = 4

[*.{json,md,yml,yaml}]
indent_style = space
indent_size = 2

[*.py]
max_line_length = 100

[*.js]
max_line_length = 100

[Makefile]
indent_style = tab



